<div class="container-fluid">
  <%= form_for @order, url: {action: "save_order"}, :method => :POST do |f| %>

        <%= f.hidden_field :id %>

      <p>
        <%= f.label :price %>
        <%= f.text_field :price, :default => @order.price %>
      </p>

      <p>
        <%= f.label :obs %>
        <%= f.text_area :obs %>
      </p>

      <p>
        <%= f.label :delivery_date %>

        <div class="container">
            <div class="row">
                <div class='col-sm-6'>
                    <div class="form-group">
                        <div class='input-group'>
                            <%= f.text_field :delivery_date, id: 'delivery_date', :value => Date.today, :class => 'input-group date form-control' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>



      </p>

      <%= f.submit 'Gravar' %>
  <% end %>
</div>

<script type="text/javascript">
    $(function () {
        $('#delivery_date').datetimepicker({
            defaultDate: "now",
            format: 'DD-mm-YYYY'
        });
    });
</script>
