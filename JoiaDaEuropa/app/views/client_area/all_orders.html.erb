<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-3">
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <tr>
                    <th>IDEncomenda</th>
                    <th>Data de Entrega</th>
                    <th>Preço</th>
                    <th>Obs</th>
                    <th>Estado</th>
                </tr>
                <% @orders.each do |order| %>
                    <tr>
                        <td><%= link_to order.id, client_area_view_order_path(order.id) %></td>
                        <td><%= h order.delivery_date %></td>
                        <td><%= h number_to_currency(order.price, unit: '€', separator: ',', delimiter: '.')%></td>
                        <td><%= h order.obs %></td>
                        <td><%= h order.order_state.description %></td>
                <% end %>
                </tr>

            </table>
        </div>
    </div>
</div>
