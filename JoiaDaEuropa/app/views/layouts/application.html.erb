<!DOCTYPE html>
<html>
<head>
    <title>JoiaDaEuropa</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

<!-- Navbar (sit on top) -->
<div class="container">
    <div class="w3-bar w3-white w3-wide w3-padding w3-card-2">
        <%= image_tag('logo.png', :alt => 'logo feed') %>
        <!-- Float links to the right. Hide them on small screens -->
        <div class="w3-right w3-hide-small">
            <a href="<%= home_index_path %>#projects" class="w3-bar-item w3-button">Home</a>
            <a href="<%= home_index_path %>#projects" class="w3-bar-item w3-button">Quem Somos</a>
            <a href="<%= home_index_path %>#contact" class="w3-bar-item w3-button">Missão</a>
            <a href="<%= home_index_path %>#contact" class="w3-bar-item w3-button">Noticias</a>


            <% if current_user %>
              <%= link_to 'Área de Cliente', client_area_index_path, :class => 'w3-bar-item w3-button' %>
              <%= link_to 'Sign Out', destroy_user_session_path, {method: 'delete', class: 'w3-bar-item w3-button'} %>

            <% else %>
                <%= link_to 'Sign In', new_user_session_path, :class => 'w3-bar-item w3-button' %>
            <% end %>

        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row content">
        <% if current_user %>
            <div class="col-sm-3 sidenav hidden-xs">
                <h2>Logo</h2>
                <ul class="nav nav-pills nav-stacked">
                    <li class="active">Menu</li>
                    <li><%= link_to t('Perfil'), profile_index_path %></li>
                    <li><%= link_to t('Nova Encomenda'), client_area_new_order_path %></li>
                    <li><%= link_to t('Encomendas'), client_area_all_orders_path %></li>
                    <li><a href="#">Contacte-nos</a></li>
                </ul>
                <br>
            </div>
        <% end %>

        <div class="col-sm-9">
            <%= yield %>
        </div>

    </div>
</div>

</body>
</html>


